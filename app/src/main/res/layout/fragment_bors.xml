<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentBors"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#639FFF"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Borstel."
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="26sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We Wash With Love"
                        android:textSize="15dp"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        android:background="@drawable/bors_img"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:padding="20dp"
                        android:textSize="12.4sp"
                        android:text="Dilema karena minimnya waktu buat bisa rawat sepatu, sekedar membersihkan pun kadang terbengkalai. Ada masalah ada solusi, setelah tadi kita tahu masalahnya, Borstel hadir sebagai solusi. Pengetahuan dan pengalaman menjadi modal dalam memberikan beberapa service perawatan sepatu kalian. Because we do care about your shoes and we wash with love - Itulah Borstel, Jadi udah bisa mulai deket kan kita? So, let's start to care about shoes."/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How to Order"
                    android:textStyle="bold"
                    android:layout_marginTop="40dp"
                    android:textSize="26sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Know Our Timeline"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="300dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/bors_rsv"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="360dp"
                    android:layout_height="40dp"
                    android:text="Store Location"
                    android:textSize="26dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:background="#4E4949"/>
                <ImageView
                    android:layout_width="320dp"
                    android:layout_height="360dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/bors_lokasi"
                    android:layout_marginBottom="40dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Maps"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>